CREATE TABLE FUNCIONARIO(
Fun_Mat INT NOT NULL UNIQUE,
Fun_Nome VARCHAR(45) NOT NULL,
Fun_DatNasc DATE NULL,

PRIMARY KEY(Fun_Mat)
);

CREATE TABLE DEPENDENTE(
Dep_Cod INT NOT NULL UNIQUE,
Dep_Nome VARCHAR(45) NOT NULL,
Func_ID INT NOT NULL,

PRIMARY KEY(Dep_Cod),

CONSTRAINT Dep_Fun_ID FOREIGN KEY (Func_ID) REFERENCES FUNCIONARIO (Fun_Mat)
);

CREATE TABLE CURSO(
Cur_Cod INT NOT NULL UNIQUE,
Cur_Nome VARCHAR(45) NOT NULL,
Cur_Ano INT NOT NULL,
Fun_ID INT NOT NULL,

PRIMARY KEY(Cur_Cod),

CONSTRAINT Fun_Cur_ID FOREIGN KEY (Fun_ID) REFERENCES FUNCIONARIO (Fun_Mat)
);
